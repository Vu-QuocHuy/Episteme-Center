# ===================================
# English Center Frontend Configuration
# Copy this file to .env and update values as needed
# ===================================

# Application Information
VITE_APP_NAME=English Center Management
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Hệ thống quản lý trung tâm tiếng Anh

# API Configuration (FIXED URL)
VITE_API_BASE_URL=https://eng-center-nestjs.onrender.com/api/v1
VITE_API_TIMEOUT=60000

# Environment (development, staging, production)
VITE_NODE_ENV=development

# Features Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_DEBUG=true
VITE_ENABLE_NOTIFICATIONS=true

# UI Configuration
VITE_DEFAULT_LANGUAGE=vi
VITE_DEFAULT_THEME=light
VITE_ITEMS_PER_PAGE=10

# File Upload Limits (in bytes)
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif

# Session Configuration (in milliseconds)
VITE_SESSION_TIMEOUT=3600000
VITE_REFRESH_TOKEN_INTERVAL=300000

# Development Options
VITE_MOCK_ANNOUNCEMENTS=true

# Optional Services (configure if needed)
# VITE_GOOGLE_ANALYTICS_ID=your_google_analytics_id
# VITE_SENTRY_DSN=your_sentry_dsn_url
# VITE_FIREBASE_API_KEY=your_firebase_api_key
# VITE_PUSHER_APP_KEY=your_pusher_app_key
# VITE_CLOUDINARY_CLOUD_NAME=your_cloudinary_name
