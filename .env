# ===================================
# English Center Frontend Configuration
# ===================================

# Application Information
VITE_APP_NAME=English Center Management
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Hệ thống quản lý trung tâm tiếng Anh

# API Configuration (FIXED URL)
VITE_API_BASE_URL=https://eng-center-nestjs.onrender.com/api/v1
VITE_API_TIMEOUT=60000

# Environment
VITE_NODE_ENV=production

# Features Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG=false
VITE_ENABLE_NOTIFICATIONS=true

# UI Configuration
VITE_DEFAULT_LANGUAGE=vi
VITE_DEFAULT_THEME=light
VITE_ITEMS_PER_PAGE=10

# File Upload Limits
VITE_MAX_FILE_SIZE=5242880
VITE_ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/gif

# Session Configuration
VITE_SESSION_TIMEOUT=3600000
VITE_REFRESH_TOKEN_INTERVAL=300000

# Optional Services (uncomment and configure if needed)
# VITE_GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX
# VITE_SENTRY_DSN=https://your-sentry-dsn
# VITE_FIREBASE_API_KEY=your-firebase-key
# VITE_PUSHER_APP_KEY=your-pusher-key
